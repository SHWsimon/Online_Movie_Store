<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">Edit <%= movie.name %></h1></h1>
        </div>
        <div style="width: 30%; margin: 25px auto">
            <form action="/movies/<%= movie._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[name]" value="<%= movie.name %>">
                </div>  
                <div class="form-group">
                    <input class="form-control" type="number" name="movie[price]" value="<%= movie.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[image]" value="<%= movie.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[movieTrail]" value="<%= movie.movieTrail %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[category]" value="<%= movie.category %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="movie[description]" value="<%= movie.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/movies/<%= movie._id %>">Go back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>