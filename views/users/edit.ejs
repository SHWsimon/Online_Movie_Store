<%include ../partials/header%>

<div class="container">
	<h1 style="text-align: center">Edit <%=user.username%>'s profile</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/users/<%=user.username%>?_method=PUT" method="POST">
			<div class="form-group">
			    <input class="form-control" type="text" placeholder="username" name="user[username]" value="<%=user.username%>" disabled>
		  	</div>
		  	<div class="form-group">
			    <input class="form-control" type="text" placeholder="image url" name="user[avatar]" value="<%=user.avatar%>">
		  	</div>
		  	<div class="form-group">
			    <input class="form-control" type="text" placeholder="first name" name="user[firstName]" value="<%=user.firstName%>">
		  	</div>
		  	<div class="form-group">
			    <input class="form-control" type="text" placeholder="last name" name="user[lastName]" value="<%=user.lastName%>">
		  	</div>
		  	<div class="form-group">
			    <input class="form-control" type="text" placeholder="email" name="user[email]" value="<%=user.email%>">
		  	</div>
		  	<div class="form-group">
		  		<textarea style="height:100px" class="form-control" type="text" placeholder="Introduction" name="user[intro]"><%= user.intro %></textarea>
		  	</div>
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</form>
		<a href="/users/<%=user._id%>">Go Back</a>
	</div>
</div>


<%include ../partials/footer%>